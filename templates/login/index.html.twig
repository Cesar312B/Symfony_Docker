{% extends 'login_base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

<section class="ftco-section">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background-image: url(images/admin-login.jpg);">
			      </div>
						<div class="login-wrap p-4 p-md-5">
			      	<div class="d-flex">
			      		<div class="w-100">
			      			<h3 class="mb-4">Iniciar Sesion</h3>
			      		</div>
								<div class="w-100">
								     {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
								</div>

								      {% if app.user %}
                    <div class="mb-3">
                        Est√°s logueado como: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
                    </div>
                {% endif %}
			      	</div>
							<form  action="{{ path('login') }}" method="post" class="signin-form">
                             <input type="hidden" name="_target_path" value="{{ path('inicio') }}"/>
			      		<div class="form-group mb-3">
			      			<label class="label" for="name">Username</label>
			      			<input type="text"  id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required>
			      		</div>
		            <div class="form-group mb-3">
		            	<label class="label" for="password">Password</label>
		              <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required>
		            </div>
		            <div class="form-group">
		            	<button type="submit" class="form-control btn btn-primary rounded ">Sign In</button>
		            </div>
		         <a href="{{ path('user_new') }}">Registrarse</a>  
		          </form>
		        </div>
		      </div>
				</div>
			</div>
			
		</div>
		   
	</section>
{% endblock %}
